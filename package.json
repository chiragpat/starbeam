{
  "name": "shimmer",
  "version": "0.0.0",
  "module": "esm",
  "workspaces": [
    ".",
    "tests"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "serve": "vite preview",
    "lint": "eslint .",
    "test": "jest",
    "typecheck": "tsc",
    "guides": "mdbook build -d ../docs guides"
  },
  "madge": {
    "detectiveOptions": {
      "es6": {
        "skipTypeImports": true
      }
    }
  },
  "devDependencies": {
    "@alex_neo/jest-expect-message": "^1.0.5",
    "@babel/core": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-typescript": "^7.15.0",
    "@simple-dom/interface": "^1.4.0",
    "@types/jest": "^27.0.2",
    "@types/jest-expect-message": "^1.0.3",
    "@types/lodash.zip": "^4.2.6",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "babel-jest": "^27.2.5",
    "eslint": "^8.5.0",
    "jest": "^27.2.5",
    "jest-diff": "^27.4.2",
    "lodash.zip": "^4.2.0",
    "typescript": "^4.4.4",
    "vite": "^2.6.4"
  },
  "dependencies": {
    "simple-dom": "^1.4.0"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "@alex_neo/jest-expect-message"
    ]
  }
}
